# ========================================
# CONFIGURAÇÕES DE AMBIENTE
# ========================================

# SQL Server - Servidor Principal
SQL_USER=seu_usuario_sql
SQL_PASSWORD=sua_senha_sql

# SQL Server - Servidor APS (se diferente)
SQL_USER_APS=seu_usuario_aps
SQL_PASSWORD_APS=sua_senha_aps

# Azure AD / Microsoft Graph
AZURE_TENANT_ID=00000000-0000-0000-0000-000000000000
AZURE_CLIENT_ID=00000000-0000-0000-0000-000000000000
AZURE_CLIENT_SECRET=sua_secret_key_aqui

# SharePoint
SHAREPOINT_SITE_ID=seu_site_id
SHAREPOINT_DRIVE_ID=seu_drive_id

# Servidor Web
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:8080

# Performance (opcional)
DOTNET_gcServer=1
DOTNET_GCHeapHardLimit=2000000000
